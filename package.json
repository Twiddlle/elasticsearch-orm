{
  "name": "elastic-orm",
  "version": "0.0.0",
  "description": "Elasticsearch object relational mapper.",
  "scripts": {
    "build": "tsc --project ./tsconfig.json",
    "test": "jest --forceExit --detectOpenHandles \"\\.spec\\.ts\"",
    "test:full": "jest \"\\.(integration|spec|performance)\\.ts\"",
    "test:cov": "jest --collectCoverage \"\\.(integration|spec|performance)\\.ts\""
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Twiddlle/elasticsearch-orm.git"
  },
  "keywords": [
    "elastic",
    "elasticsearch",
    "orm",
    "decorators",
    "entity",
    "validation",
    "mapping",
    "typescript"
  ],
  "author": "Twiddle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Twiddlle/elasticsearch-orm/issues"
  },
  "homepage": "https://github.com/Twiddlle/elasticsearch-orm#readme",
  "devDependencies": {
    "@elastic/elasticsearch": "^9.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.14",
    "@types/lorem-ipsum": "^2.0.0",
    "@types/random": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "bodybuilder": "^2.4.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "jest": "^29.7.0",
    "lorem-ipsum": "^2.0.4",
    "prettier": "^2.6.1",
    "random": "^3.0.6",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "web-streams-polyfill": "^4.1.0"
  },
  "dependencies": {
    "nanoid": "^3.3.7",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^8.0.0 || ^9.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": "\\.(integration|spec|performance)\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
